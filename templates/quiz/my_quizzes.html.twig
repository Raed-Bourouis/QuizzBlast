{% extends 'base.html.twig' %}

{% block title %}My Quizzes - QuizzBlast{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 fw-bold">My Quizzes</h1>
        <div>
            <a href="{{ path('app_quiz_new') }}" class="btn btn-primary me-2">
                + Create New Quiz
            </a>
            <a href="{{ path('app_quiz_index') }}" class="btn btn-outline-secondary">
                Browse Public Quizzes
            </a>
        </div>
    </div>

    {% if quizzes|length > 0 %}
        <div class="row g-4">
            {% for quiz in quizzes %}
                <div class="col-md-6">
                    <div class="card quiz-card h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold mb-3">{{ quiz.title }}</h5>
                            <p class="card-text text-muted flex-grow-1">
                                {{ quiz.description|length > 100 ? quiz.description|slice(0, 100) ~ '...' : quiz.description }}
                            </p>
                            
                            <div class="mb-3">
                                <span class="badge bg-primary me-1">{{ quiz.category }}</span>
                                <span class="badge 
                                    {% if quiz.difficulty == 'EASY' %}bg-success
                                    {% elseif quiz.difficulty == 'MEDIUM' %}bg-warning
                                    {% else %}bg-danger{% endif %} me-1">
                                    {{ quiz.difficulty }}
                                </span>
                                <span class="badge {% if quiz.isPublic %}bg-info{% else %}bg-secondary{% endif %} me-1">
                                    {% if quiz.isPublic %}Public{% else %}Private{% endif %}
                                </span>
                                <span class="badge {% if quiz.isActive %}bg-success{% else %}bg-secondary{% endif %}">
                                    {% if quiz.isActive %}Active{% else %}Inactive{% endif %}
                                </span>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    üìù {{ quiz.questions|length }} question{{ quiz.questions|length != 1 ? 's' : '' }}
                                </small>
                            </div>

                            <div class="d-flex gap-2 mt-3">
                                <a href="{{ path('app_quiz_show', {id: quiz.id}) }}" class="btn btn-sm btn-outline-primary flex-fill">
                                    View
                                </a>
                                <a href="{{ path('app_quiz_edit', {id: quiz.id}) }}" class="btn btn-sm btn-warning flex-fill">
                                    Edit
                                </a>
                                <form method="post" action="{{ path('app_quiz_delete', {id: quiz.id}) }}" class="flex-fill" onsubmit="return confirm('Are you sure you want to delete this quiz?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quiz.id) }}">
                                    <button type="submit" class="btn btn-sm btn-danger w-100">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-5">
            <div class="mb-4">
                <span class="display-1">üìù</span>
            </div>
            <h3 class="mb-3">You haven't created any quizzes yet</h3>
            <p class="text-muted mb-4">Start creating engaging quizzes for your audience!</p>
            <a href="{{ path('app_quiz_new') }}" class="btn btn-primary btn-lg">Create Your First Quiz</a>
        </div>
    {% endif %}
</div>
{% endblock %}
