{% extends 'base.html.twig' %}

{% block title %}Login - QuizzBlast{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .login-container {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 85vh;
            padding: 2rem 0;
            position: relative;
        }

        .login-container::before {
            content: '';
            position: absolute;
            top: -10%;
            left: -10%;
            width: 300px;
            height: 300px;
            background: radial-gradient(circle, rgba(103, 126, 234, 0.3) 0%, transparent 70%);
            border-radius: 50%;
            animation: float 6s ease-in-out infinite;
        }

        .login-container::after {
            content: '';
            position: absolute;
            bottom: -10%;
            right: -10%;
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(118, 75, 162, 0.2) 0%, transparent 70%);
            border-radius: 50%;
            animation: float 8s ease-in-out infinite reverse;
        }

        @keyframes float {
            0%, 100% {
                transform: translateY(0) translateX(0);
            }
            50% {
                transform: translateY(-30px) translateX(20px);
            }
        }
        
        .login-card {
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(20px);
            border-radius: 2rem;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            overflow: hidden;
            max-width: 480px;
            width: 100%;
            animation: slideInUp 0.6s ease-out;
            position: relative;
            z-index: 1;
        }

        @keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .login-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 3rem 2.5rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .login-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -20%;
            width: 300px;
            height: 300px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
        }

        .login-header::after {
            content: '';
            position: absolute;
            bottom: -30%;
            left: -10%;
            width: 200px;
            height: 200px;
            background: rgba(255, 255, 255, 0.08);
            border-radius: 50%;
        }
        
        .login-header h1 {
            font-size: 2.25rem;
            font-weight: 800;
            margin-bottom: 0.75rem;
            position: relative;
            z-index: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
        }

        .login-header h1 i {
            font-size: 2.5rem;
            animation: pulse 2s ease-in-out infinite;
        }

        @keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.1);
            }
        }
        
        .login-header p {
            opacity: 0.95;
            margin-bottom: 0;
            font-size: 1.05rem;
            position: relative;
            z-index: 1;
        }
        
        .login-body {
            padding: 3rem 2.5rem;
        }
        
        .form-floating {
            margin-bottom: 1.75rem;
        }
        
        .form-floating label {
            color: var(--text-muted);
            font-weight: 500;
        }
        
        .form-control {
            border: 2px solid var(--border-color);
            border-radius: 1rem;
            padding: 1.25rem 1rem 1.25rem 3.5rem;
            height: auto;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: white;
        }
        
        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 5px rgba(99, 102, 241, 0.1);
            transform: translateY(-2px);
        }

        .input-icon {
            position: relative;
        }
        
        .input-icon i {
            position: absolute;
            left: 1.25rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
            font-size: 1.35rem;
            z-index: 10;
            transition: color 0.3s ease;
        }

        .input-icon:focus-within i {
            color: var(--primary-color);
        }
        
        .input-icon .form-control {
            padding-left: 3.5rem;
        }
        
        .btn-login {
            width: 100%;
            padding: 1.125rem;
            font-size: 1.15rem;
            font-weight: 700;
            border-radius: 1rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            transition: all 0.3s ease;
            margin-top: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            box-shadow: 0 4px 15px rgba(103, 126, 234, 0.4);
        }
        
        .btn-login:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(103, 126, 234, 0.5);
        }

        .btn-login:active {
            transform: translateY(-1px);
        }
        
        .checkbox-wrapper {
            display: flex;
            align-items: center;
            margin-bottom: 1.75rem;
            padding: 1rem;
            background: var(--light-bg);
            border-radius: 0.75rem;
            transition: all 0.3s ease;
        }

        .checkbox-wrapper:hover {
            background: rgba(99, 102, 241, 0.05);
        }
        
        .checkbox-wrapper input[type="checkbox"] {
            width: 22px;
            height: 22px;
            margin-right: 1rem;
            cursor: pointer;
            accent-color: var(--primary-color);
        }
        
        .checkbox-wrapper label {
            margin-bottom: 0;
            cursor: pointer;
            user-select: none;
            font-weight: 500;
        }
        
        .divider {
            text-align: center;
            margin: 2rem 0 1.5rem;
            position: relative;
        }
        
        .divider::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(90deg, transparent 0%, var(--border-color) 50%, transparent 100%);
        }
        
        .divider span {
            background: white;
            padding: 0 1.25rem;
            position: relative;
            color: var(--text-muted);
            font-size: 0.95rem;
            font-weight: 500;
        }
        
        .register-link {
            text-align: center;
            padding: 1.5rem;
            background: linear-gradient(135deg, rgba(99, 102, 241, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
            border-radius: 1rem;
            margin-top: 1rem;
        }
        
        .register-link a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 700;
            font-size: 1.05rem;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .register-link a:hover {
            color: var(--primary-dark);
            transform: translateX(5px);
        }
        
        .alert-custom {
            border-radius: 1rem;
            border: none;
            padding: 1.25rem 1.5rem;
            margin-bottom: 1.75rem;
            display: flex;
            align-items: start;
            gap: 1rem;
            animation: shake 0.5s ease-out;
        }

        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-10px); }
            75% { transform: translateX(10px); }
        }
        
        .alert-danger {
            background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
            color: #991b1b;
            border-left: 4px solid #dc2626;
        }
        
        .alert-info {
            background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
            color: #1e40af;
            border-left: 4px solid #3b82f6;
        }

        .alert-custom i {
            flex-shrink: 0;
        }

        .alert-custom strong {
            font-weight: 700;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container login-container">
    <div class="login-card">
        <div class="login-header">
            <h1>
                <i class="bi bi-lightning-charge-fill"></i>
                Welcome Back!
            </h1>
            <p>Login to continue your quiz journey</p>
        </div>
        
        <div class="login-body">
            {% if error %}
                <div class="alert alert-danger alert-custom">
                    <i class="bi bi-exclamation-circle-fill fs-5"></i>
                    <div>
                        <strong>Login Failed!</strong><br>
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                </div>
            {% endif %}

            {% if app.user %}
                <div class="alert alert-info alert-custom">
                    <i class="bi bi-info-circle-fill fs-5"></i>
                    <div>
                        You are logged in as <strong>{{ app.user.userIdentifier }}</strong>
                        <br>
                        <a href="{{ path('app_logout') }}" class="text-decoration-underline">Logout</a>
                    </div>
                </div>
            {% endif %}

            <form method="post">
                <div class="form-floating input-icon">
                    <i class="bi bi-person-fill"></i>
                    <input 
                        type="text" 
                        class="form-control" 
                        id="inputUsername" 
                        name="username"
                        value="{{ last_username }}" 
                        placeholder="Username or Email"
                        autocomplete="username" 
                        required 
                        autofocus
                    >
                    <label for="inputUsername">Username or Email</label>
                </div>

                <div class="form-floating input-icon">
                    <i class="bi bi-lock-fill"></i>
                    <input 
                        type="password" 
                        class="form-control" 
                        id="inputPassword" 
                        name="password"
                        placeholder="Password"
                        autocomplete="current-password" 
                        required
                    >
                    <label for="inputPassword">Password</label>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="checkbox-wrapper">
                    <input type="checkbox" id="remember_me" name="_remember_me">
                    <label for="remember_me">Remember me</label>
                </div>

                <button class="btn btn-login" type="submit">
                    <i class="bi bi-box-arrow-in-right me-2"></i>
                    Sign In
                </button>

                <div class="divider">
                    <span>Don't have an account?</span>
                </div>

                <div class="register-link">
                    <a href="{{ path('app_register') }}">
                        <i class="bi bi-person-plus-fill me-1"></i>
                        Create a new account
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
