{% extends 'base.html.twig' %}

{% block title %}Game Master - QuizzBlast{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-body p-5 text-center">
                    <h1 class="display-4 fw-bold mb-4">ðŸŽ® Game Master</h1>
                    
                    <div class="alert alert-primary mb-4" role="alert">
                        <h3 class="h4 mb-3">Game Code</h3>
                        <div class="display-3 fw-bold text-primary mb-2">{{ session.code }}</div>
                        <p class="mb-0">Share this code with players to join the game</p>
                    </div>

    <p>Code de la session : <strong>{{ session.code }}</strong></p>
    <p>Status : <span id="status">{{ session.status }}</span></p>

    <button id="startGameBtn">DÃ©marrer la partie</button>
    <button id="nextQuestionBtn" disabled>Question suivante</button>

    <h2>Participants</h2>
    <ul id="participants">
        {% for participant in session.gameParticipants %}
            <li>{{ participant.nickname }} - <span id="score-{{ participant.id }}">{{ participant.totalScore }}</span> points</li>
        {% endfor %}
    </ul>

    <script>
        const code = "{{ session.code }}";

        const startBtn = document.getElementById('startGameBtn');
        const nextBtn = document.getElementById('nextQuestionBtn');

        startBtn.addEventListener('click', () => {
            fetch(`/game/${code}/start-game`, { method: 'POST' })
                .then(res => res.json())
                .then(data => {
                    if(data.success){
                        document.getElementById('status').innerText = 'IN_PROGRESS';
                        startBtn.disabled = true;
                        nextBtn.disabled = false;
                    }
                });
        });

        nextBtn.addEventListener('click', () => {
            fetch(`/game/${code}/next`, { method: 'POST' })
                .then(res => res.json())
                .then(data => {
                    if(data.success){
                        console.log('Question suivante envoyÃ©e');
                    }
                });
        });

        // Optionnel : WebSocket pour recevoir les updates
        const ws = new WebSocket('ws://localhost:8080/game');

        ws.onmessage = (event) => {
            const msg = JSON.parse(event.data);
            console.log('Message WebSocket reÃ§u :', msg);
        };
    </script>
{% endblock %}
