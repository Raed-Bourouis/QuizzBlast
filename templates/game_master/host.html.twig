{% extends 'base.html.twig' %}

{% block title %}Game Master - QuizzBlast{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-body p-5 text-center">
                    <h1 class="display-4 fw-bold mb-4">ðŸŽ® Game Master</h1>

                    <div class="alert alert-primary mb-4" role="alert">
                        <h3 class="h4 mb-3">Game Code</h3>
                        <div class="display-3 fw-bold text-primary mb-2">{{ session.code }}</div>
                        <p class="mb-0">Share this code with players to join the game</p>
                    </div>

                    <p>Status : <span id="status">{{ session.status }}</span></p>

                    <button id="startGameBtn">DÃ©marrer la partie</button>
                    <button id="nextQuestionBtn" disabled>Question suivante</button>

                    <h2>Participants</h2>
                    <ul id="participants">
                        {% for participant in session.gameParticipants %}
                            <li id="participant-{{ participant.id }}">
                                {{ participant.nickname }} - <span id="score-{{ participant.id }}">{{ participant.totalScore }}</span> points
                            </li>
                        {% endfor %}
                    </ul>

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const code = "{{ session.code }}";

    const startBtn = document.getElementById('startGameBtn');
    const nextBtn = document.getElementById('nextQuestionBtn');
    const statusSpan = document.getElementById('status');

    // WebSocket pour recevoir les mises Ã  jour en temps rÃ©el
    const ws = new WebSocket('ws://localhost:8080/game');

    ws.onopen = () => console.log('ConnectÃ© au WebSocket !');

    ws.onmessage = (event) => {
        const msg = JSON.parse(event.data);
        console.log('Message WebSocket reÃ§u :', msg);

        switch(msg.type) {
            case 'START_GAME':
                statusSpan.innerText = 'IN_PROGRESS';
                startBtn.disabled = true;
                nextBtn.disabled = false;
                break;

            case 'NEXT_QUESTION':
                console.log('Question suivante :', msg.payload.questionIndex);
                break;

            case 'END_GAME':
                statusSpan.innerText = 'FINISHED';
                nextBtn.disabled = true;

                // Mettre Ã  jour le leaderboard
                msg.payload.leaderboard.forEach(p => {
                    const scoreSpan = document.getElementById(`score-${p.id}`);
                    if(scoreSpan){
                        scoreSpan.innerText = p.score;
                    } else {
                        // Si nouveau participant
                        const li = document.createElement('li');
                        li.id = `participant-${p.id}`;
                        li.innerHTML = `${p.nickname} - <span id="score-${p.id}">${p.score}</span> points`;
                        document.getElementById('participants').appendChild(li);
                    }
                });
                break;
        }
    };

    ws.onclose = () => console.log('WebSocket fermÃ©');
    ws.onerror = (err) => console.error('Erreur WebSocket', err);

    // Bouton dÃ©marrer
    startBtn.addEventListener('click', () => {
        fetch(`/game/${code}/start-game`, { method: 'POST' })
            .then(res => res.json())
            .then(data => {
                if(data.success){
                    statusSpan.innerText = 'IN_PROGRESS';
                    startBtn.disabled = true;
                    nextBtn.disabled = false;
                }
            });
    });

    // Bouton question suivante
    nextBtn.addEventListener('click', () => {
        fetch(`/game/${code}/next`, { method: 'POST' })
            .then(res => res.json())
            .then(data => {
                if(data.success){
                    console.log('Question suivante envoyÃ©e');
                }
            });
    });
</script>
{% endblock %}
