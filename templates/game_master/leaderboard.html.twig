{% extends 'base.html.twig' %}

{% block title %}Leaderboard{% endblock %}

{% block body %}
    <h1>Leaderboard â€“ Code {{ session.code }}</h1>

    <table border="1" cellpadding="6">
        <thead>
        <tr>
            <th>#</th>
            <th>Joueur</th>
            <th>Score total</th>
        </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>
                    {% if participant.nickname %}
                        {{ participant.nickname }}
                    {% elseif participant.user and participant.user.username is defined %}
                        {{ participant.user.username }}
                    {% else %}
                        Joueur {{ loop.index }}
                    {% endif %}
                </td>
                <td>{{ participant.totalScore }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun participant pour cette session.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
