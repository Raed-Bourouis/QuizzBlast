{% extends 'base.html.twig' %}

{% block title %}Register - QuizzBlast{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .register-container {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 90vh;
            padding: 2rem 0;
            position: relative;
        }

        .register-container::before {
            content: '';
            position: absolute;
            top: -5%;
            right: -5%;
            width: 350px;
            height: 350px;
            background: radial-gradient(circle, rgba(118, 75, 162, 0.3) 0%, transparent 70%);
            border-radius: 50%;
            animation: float 7s ease-in-out infinite;
        }

        .register-container::after {
            content: '';
            position: absolute;
            bottom: -5%;
            left: -5%;
            width: 280px;
            height: 280px;
            background: radial-gradient(circle, rgba(103, 126, 234, 0.25) 0%, transparent 70%);
            border-radius: 50%;
            animation: float 9s ease-in-out infinite reverse;
        }

        @keyframes float {
            0%, 100% {
                transform: translateY(0) translateX(0) scale(1);
            }
            50% {
                transform: translateY(-30px) translateX(30px) scale(1.1);
            }
        }
        
        .register-card {
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(20px);
            border-radius: 2rem;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            overflow: hidden;
            max-width: 520px;
            width: 100%;
            animation: zoomIn 0.6s ease-out;
            position: relative;
            z-index: 1;
        }

        @keyframes zoomIn {
            from {
                opacity: 0;
                transform: scale(0.9);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }
        
        .register-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 3rem 2.5rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .register-header::before {
            content: '';
            position: absolute;
            top: -60%;
            left: -20%;
            width: 350px;
            height: 350px;
            background: rgba(255, 255, 255, 0.08);
            border-radius: 50%;
        }

        .register-header::after {
            content: '';
            position: absolute;
            bottom: -40%;
            right: -15%;
            width: 250px;
            height: 250px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
        }
        
        .register-header h1 {
            font-size: 2.35rem;
            font-weight: 800;
            margin-bottom: 0.75rem;
            position: relative;
            z-index: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
        }

        .register-header h1 i {
            font-size: 2.6rem;
            animation: bounce 2s ease-in-out infinite;
        }

        @keyframes bounce {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-10px);
            }
        }
        
        .register-header p {
            opacity: 0.95;
            margin-bottom: 0;
            font-size: 1.05rem;
            position: relative;
            z-index: 1;
        }
        
        .register-body {
            padding: 3rem 2.5rem;
        }
        
        .form-group {
            margin-bottom: 1.75rem;
        }
        
        .form-label {
            font-weight: 700;
            margin-bottom: 0.65rem;
            color: var(--text-dark);
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.95rem;
        }

        .form-label i {
            color: var(--primary-color);
        }
        
        .form-control {
            border: 2px solid var(--border-color);
            border-radius: 1rem;
            padding: 1.125rem 1rem 1.125rem 3.5rem;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: white;
        }
        
        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 5px rgba(99, 102, 241, 0.1);
            transform: translateY(-2px);
        }

        .form-control::placeholder {
            color: var(--text-muted);
            opacity: 0.6;
        }
        
        .form-check {
            padding: 1.25rem;
            background: linear-gradient(135deg, rgba(99, 102, 241, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
            border-radius: 1rem;
            margin-bottom: 1.75rem;
            border: 2px solid transparent;
            transition: all 0.3s ease;
        }

        .form-check:hover {
            border-color: rgba(99, 102, 241, 0.2);
            background: linear-gradient(135deg, rgba(99, 102, 241, 0.08) 0%, rgba(118, 75, 162, 0.08) 100%);
        }
        
        .form-check-input {
            width: 22px;
            height: 22px;
            margin-top: 0.2rem;
            cursor: pointer;
            accent-color: var(--primary-color);
            border: 2px solid var(--border-color);
        }

        .form-check-input:checked {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }
        
        .form-check-label {
            cursor: pointer;
            user-select: none;
            font-weight: 500;
            margin-left: 0.5rem;
        }
        
        .btn-register {
            width: 100%;
            padding: 1.125rem;
            font-size: 1.15rem;
            font-weight: 700;
            border-radius: 1rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            transition: all 0.3s ease;
            margin-top: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            box-shadow: 0 4px 15px rgba(103, 126, 234, 0.4);
        }
        
        .btn-register:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(103, 126, 234, 0.5);
        }

        .btn-register:active {
            transform: translateY(-1px);
        }
        
        .divider {
            text-align: center;
            margin: 2rem 0 1.5rem;
            position: relative;
        }
        
        .divider::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(90deg, transparent 0%, var(--border-color) 50%, transparent 100%);
        }
        
        .divider span {
            background: white;
            padding: 0 1.25rem;
            position: relative;
            color: var(--text-muted);
            font-size: 0.95rem;
            font-weight: 500;
        }
        
        .login-link {
            text-align: center;
            padding: 1.5rem;
            background: linear-gradient(135deg, rgba(99, 102, 241, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
            border-radius: 1rem;
            margin-top: 1rem;
        }
        
        .login-link a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 700;
            font-size: 1.05rem;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .login-link a:hover {
            color: var(--primary-dark);
            transform: translateX(5px);
        }
        
        .alert-custom {
            border-radius: 1rem;
            border: none;
            padding: 1.25rem 1.5rem;
            margin-bottom: 1.75rem;
            display: flex;
            align-items: start;
            gap: 1rem;
            animation: slideInDown 0.5s ease-out;
        }

        @keyframes slideInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .alert-danger {
            background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
            color: #991b1b;
            border-left: 4px solid #dc2626;
        }

        .alert-custom i {
            flex-shrink: 0;
        }
        
        .invalid-feedback {
            color: var(--danger-color);
            font-size: 0.875rem;
            margin-top: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.35rem;
            font-weight: 500;
        }

        .invalid-feedback::before {
            content: 'âš ';
            font-size: 1rem;
        }
        
        .input-icon-wrapper {
            position: relative;
        }
        
        .input-icon {
            position: absolute;
            left: 1.25rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
            font-size: 1.35rem;
            z-index: 10;
            transition: color 0.3s ease;
        }

        .input-icon-wrapper:focus-within .input-icon {
            color: var(--primary-color);
        }
        
        .input-with-icon {
            padding-left: 3.5rem !important;
        }

        .text-muted {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-top: 0.5rem;
            font-size: 0.85rem;
        }

        .text-muted i {
            color: var(--primary-color);
        }

        /* Validation states */
        .form-control.is-invalid {
            border-color: var(--danger-color);
            background-image: none;
        }

        .form-control.is-invalid:focus {
            border-color: var(--danger-color);
            box-shadow: 0 0 0 5px rgba(239, 68, 68, 0.1);
        }

        .form-control.is-valid {
            border-color: var(--success-color);
            background-image: none;
        }

        .form-control.is-valid:focus {
            border-color: var(--success-color);
            box-shadow: 0 0 0 5px rgba(16, 185, 129, 0.1);
        }
    </style>
{% endblock %}

{% block body %}
<div class="container register-container">
    <div class="register-card">
        <div class="register-header">
            <h1>
                <i class="bi bi-person-plus-fill"></i>
                Join QuizzBlast!
            </h1>
            <p>Create your account and start your quiz adventure</p>
        </div>
        
        <div class="register-body">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger alert-custom">
                    <i class="bi bi-exclamation-circle-fill fs-5"></i>
                    <div>{{ flash_error }}</div>
                </div>
            {% endfor %}

            {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
                
                <div class="form-group">
                    {{ form_label(registrationForm.username, 'Username', {'label_attr': {'class': 'form-label'}}) }}
                    <div class="input-icon-wrapper">
                        <i class="bi bi-person-fill input-icon"></i>
                        {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control input-with-icon', 'placeholder': 'Choose a username'}}) }}
                    </div>
                    {{ form_errors(registrationForm.username) }}
                </div>

                <div class="form-group">
                    {{ form_label(registrationForm.email, 'Email Address', {'label_attr': {'class': 'form-label'}}) }}
                    <div class="input-icon-wrapper">
                        <i class="bi bi-envelope-fill input-icon"></i>
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control input-with-icon', 'placeholder': 'your.email@example.com'}}) }}
                    </div>
                    {{ form_errors(registrationForm.email) }}
                </div>

                <div class="form-group">
                    {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'form-label'}}) }}
                    <div class="input-icon-wrapper">
                        <i class="bi bi-lock-fill input-icon"></i>
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control input-with-icon', 'placeholder': 'Choose a strong password'}}) }}
                    </div>
                    {{ form_errors(registrationForm.plainPassword) }}
                    <small class="text-muted">
                        <i class="bi bi-info-circle"></i>
                        Use at least 6 characters with a mix of letters and numbers
                    </small>
                </div>

                <div class="form-check">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>

                <button type="submit" class="btn btn-register">
                    <i class="bi bi-rocket-takeoff-fill me-2"></i>
                    Create Account
                </button>

                <div class="divider">
                    <span>Already have an account?</span>
                </div>

                <div class="login-link">
                    <a href="{{ path('app_login') }}">
                        <i class="bi bi-box-arrow-in-right me-1"></i>
                        Sign in instead
                    </a>
                </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}
